<% include ../partials/header %>

<h1 class="text-center">
    Tambah Organisasi <br />
</h1>

<form action="/organization/add" method="POST" class="needs-validation" novalidate>
    <div class="form-group">
        <label for="name">Nama</label>
        <input type="text" class="form-control" id="name" aria-describedby="nameHelp"
            placeholder="Masukan nama organisasi" name="name"  value="<%= body.name %>" required>
        <small id="nameHelp" class="form-text text-muted">Masukan nama Organisasi lengkap tanpa singkatan.</small>
        <% if (errors.name) { %>
        <div class="invalid-feedback">
            <%= errors.name %>
        </div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="nama">Singkatan</label>
        <input type="text" class="form-control" id="abbreviation" aria-describedby="abbreviationHelp"
            placeholder="Masukan nama singkat organisasi" value="<%= body.abbreviation %>" name="abbreviation">
        <small id="abbreviationHelp" class="form-text text-muted">Masukan nama singkat organisasi bila ada.</small>
    </div>
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" id="username" aria-describedby="usernameHelp"
            placeholder="Masukan username" name="username" value="<%= body.username %>">
        <small id="usernameHelp" class="form-text text-muted">Digunakan untuk login organisasi</small>
        <% if (errors.username) { %>
        <div class="invalid-feedback">
            <%= errors.username %>
        </div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Masukan password" name="password" value="<%= body.password %>">
        <% if (errors.password) { %>
        <div class="invalid-feedback">
            <%= errors.password %>
        </div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="confirmPassword">Konfirmasi Password</label>
        <input type="password" class="form-control" id="confirmPassword" placeholder="Masukan konfirmasi password"
            name="confirmPassword" value="<%= body.confirmPassword %>">
        <% if (errors.confirmPassword) { %>
        <div class="invalid-feedback">
            <%= errors.confirmPassword %>
        </div>
        <% } %>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<% include ../partials/footer %>

<script>
    $(document).ready(function () {
        if ("<%= errors.name %>") {
            $('#name').addClass('is-invalid')
        }
        if ("<%= errors.username %>") {
            $('#username').addClass('is-invalid')
        }
        if ("<%= errors.password %>") {
            $('#password').addClass('is-invalid')
        }
        if ("<%= errors.confirmPassword %>") {
            $('#confirmPassword').addClass('is-invalid')
        }
    })
</script>