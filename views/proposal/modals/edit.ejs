<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="edit-modal-label"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="body-edit">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="btn-modal-edit" type="submit" class="btn btn-primary">Simpan</button>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker-event').datetimepicker({
                locale: 'en',
                format: 'YYYY-MM-DD HH:mm'
            });
        });

        $(document).on('click', '#btn-modal-edit', (event) => {
            var target = $(event.currentTarget)
            let title = target.attr('data-title')

            if (title == 'backgrounds') {
                let confirm = window.confirm("Yakin?");
                if (confirm) {
                    $("#revise-background").submit();
                    return false;
                }
            }
        })
    </script>
</div>